generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["folio_ai"]
}

// NextAuth.js tables
model User {
  id                     String      @id @default(cuid())
  name                   String?
  email                  String      @unique
  emailVerified          DateTime?   @map("email_verified")
  image                  String?
  password               String?
  defaultNewsPortfolioId String?     @map("default_news_portfolio_id")
  createdAt              DateTime    @default(now()) @map("created_at")
  updatedAt              DateTime    @updatedAt @map("updated_at")
  accounts               Account[]
  sessions               Session[]
  portfolios             Portfolio[]
  apiKeys                ApiKey[]

  @@map("users")
  @@schema("folio_ai")
}

model Account {
  id                String   @id @default(cuid())
  userId            String   @map("user_id")
  type              String
  provider          String
  providerAccountId String   @map("provider_account_id")
  refresh_token     String?  @db.Text
  access_token      String?  @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?  @db.Text
  session_state     String?
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map("accounts")
  @@schema("folio_ai")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("sessions")
  @@schema("folio_ai")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
  @@schema("folio_ai")
}

// Application tables
model Portfolio {
  id          String   @id @default(cuid())
  name        String
  description String?
  userId      String   @map("user_id")
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  assets      Asset[]
  orders      Order[]
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@index([userId])
  @@map("portfolios")
  @@schema("folio_ai")
}

model Asset {
  id          String    @id @default(cuid())
  symbol      String
  name        String?
  type        AssetType
  quantity    Decimal   @db.Decimal(18, 8)
  portfolioId String    @map("portfolio_id")
  portfolio   Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  @@unique([portfolioId, symbol])
  @@index([portfolioId])
  @@index([symbol])
  @@map("assets")
  @@schema("folio_ai")
}

model Order {
  id          String    @id @default(cuid())
  symbol      String
  name        String?
  type        AssetType
  orderType   OrderType @map("order_type")
  quantity    Decimal   @db.Decimal(18, 8)
  price       Decimal   @db.Decimal(18, 8)
  portfolioId String    @map("portfolio_id")
  portfolio   Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)
  executedAt  DateTime  @default(now()) @map("executed_at")
  notes       String?   @db.Text
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  @@index([portfolioId])
  @@index([portfolioId, symbol])
  @@index([executedAt])
  @@map("orders")
  @@schema("folio_ai")
}

model ApiKey {
  id        String    @id @default(cuid())
  platform  Platform
  apiKey    String    @map("api_key")
  apiSecret String    @map("api_secret")
  userId    String    @map("user_id")
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  lastSync  DateTime? @map("last_sync")
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")

  @@unique([userId, platform])
  @@index([userId])
  @@map("api_keys")
  @@schema("folio_ai")
}

enum AssetType {
  CRYPTO
  STOCK

  @@map("asset_type")
  @@schema("folio_ai")
}

enum OrderType {
  BUY
  SELL

  @@map("order_type")
  @@schema("folio_ai")
}

enum Platform {
  BINANCE

  @@map("platform")
  @@schema("folio_ai")
}
